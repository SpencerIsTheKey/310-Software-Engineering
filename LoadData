import java.io.File;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.Statement;
import java.util.Scanner;

/* Loads data into the database
 * This only needs to be run only once after the 
 * SQL has been created. Once the data is loaded, this is no longer needed.
 * Created with guidance from COSC 304 Lab 7
 * https://people.ok.ubc.ca/rlawrenc/teaching/304/Labs/Lab7/
 */

public class LoadData
{
	public static void main(String[] args) throws Exception
	{
		loadDatabase();
	}
	
	public static void loadDatabase() throws Exception
	{		
		// Info to access database
		String url = "jdbc:sqlserver://sql04.ok.ubc.ca:1433;DatabaseName=db_jlabossi;";
		String user = "jlabossi";
		String password = "23976160";
		
		System.out.println("Connecting to the database.");

		// Connect to database using credentials
		Connection connect = DriverManager.getConnection(url, user, password);
				
		String file = "data/order_sql.ddl";
		
	    try
	    {
	        Statement stmt = connect.createStatement();
	        Scanner scanner = new Scanner(new File(file));

	        scanner.useDelimiter(";");
	        while (scanner.hasNext())
	        {
	            String command = scanner.next();
	            if (command.trim().equals(""))
	            	continue;
	            try
	            {
	            	stmt.execute(command);
	            }
	            catch (Exception e)
	            {	// If table from DROP TABLE doesn't exist
	            	System.out.println(e);
	            }
	        }	 
	        scanner.close();
	    }
	    catch (Exception e)
	    {
	    	// Print exception that occurred
	        System.out.println(e);
	    }   
	}
}
